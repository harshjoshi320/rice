[module/player-mpris-tail]
type = custom/script
exec = ~/.config/polybar/scripts/player-mpris-tail.py -f '{icon} {:artist:t40:{artist} - {title}:}' -b {'vlc','cmus' --truncate-text "..." --icon-none '' --icon-playing '%{F#7FFF00}♪%{F-}' --icon-paused '' --icon-stopped ''
label = %output%
tail = true

[module/player-mpris-simple]
type = custom/script
exec = ~/.config/polybar/scripts/player-mpris-simple.sh
interval = 1
